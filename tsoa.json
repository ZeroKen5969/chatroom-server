{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/controllers/*Controller.ts"
    ],
    "spec": {
        "outputDirectory": ".",
        "specVersion": 3,
        "securityDefinitions": {
            "jwt": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "routes": {
        "routesDir": "src/routes",
        "authenticationModule": "src/middlewares/authHandler.ts"
    },
    "ignore": [
        "**/node_modules/**"
    ]
}
